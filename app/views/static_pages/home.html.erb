<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'share/user_info' %>
      </section>
      <section class="stats">
        <%= render 'share/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'share/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>实时动态</h3>
      <%= render 'share/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Educoder | Rails Tutorial</h1>

    <h2>欢迎来到Educoder Rails教程主页</h2>

    <%= link_to "加入我们！", new_user_url, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
